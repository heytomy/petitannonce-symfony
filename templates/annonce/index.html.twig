{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!{% endblock title %}
{% block content %}
    <div class="container">
        <h1>Liste des annonces</h1>
        <div class="row">
        {% for annonce in annonces %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" height="225" width="100%">
                    <img class="img-fluid" src="{% if annonce.imageUrl is not null %}{{ annonce.imageUrl }}{% endif %}">
                    <div class="card-body">
                        <h5 class="card-title">{{ annonce.title }}</h5>
                        <p class="card-text">{{ annonce.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="{{ path('app_annonce_showbyslug', {id: annonce.id, slug: annonce.slug}) }}" class="btn btn-sm btn-outline-secondary" type="button">View</a>
                                <a href="{{ path('app_admin_annonce_edit', {id: annonce.id}) }}" class="btn btn-sm btn-outline-secondary" type="button">Edit</a>
                            </div>
                            <small class="text-muted">{{ annonce.price }}â‚¬</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

{{ include("_inc/pagination.html.twig", {
    total_pages: total_pages,
    current_page: page
}) }}

{% endblock %}
