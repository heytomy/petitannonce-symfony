<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="{{ path('annonces') }}?page={{ page - 1 }}">Previous</a></li>
        {% for i in range(1, total_pages) %}
            <li class="page-item{% if i == page %} active{% endif %}">
                <a 
                    class="page-link" 
                    href="{{ path('annonces') }}?page={{ i }}"
                >
                    {{ i }}
                </a>
            </li>
        {% endfor %}
        <li class="page-item"><a class="page-link" href="{{ path('annonces') }}?page={{ page + 1 }}">Next</a></li> 
    </ul>
</nav>
